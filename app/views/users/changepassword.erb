<%= stylesheet_link_tag "todo_css"%>
<div id="content_area">

  <%form_for :user, :controller=>"users",:action=>"changepassoword"  do |f|%>
      <img id="logo"  src="/images/Logo.png" width="32" />
      <table id="login_panel" class="paswd_bar">
        <tr>

        </tr>
         <tr>
        <td>
          <%= f.label :"Enter password"%>
        </td>
        <td>
          <%= f.password_field :password,:required=>"true",:placeholder=>"Password",:value=>"" %>
        </td>
        </tr>
        <tr>
          <td>
            <%= f.label :"Retype password"%>
          </td>
          <td>
            <%=f.password_field  :password_confirmation,:placeholder=>"Confirm Password",:value=>""%>
          </td>
        <tr>
        <td></td>
        <td>
          <%=f.submit 'Change',:class=>"btns"%>
        </td>
      </tr>
      </table>

  <%end%>
</div>