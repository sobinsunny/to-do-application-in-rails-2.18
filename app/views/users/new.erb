<%= stylesheet_link_tag "todo_css"%>
<% form_for @user do |f| %>
    <%= f.error_messages %>
    <img id="logo"  src="/images/Logo.png" width="32" />
    <table id="login_panel">
    <div class="line_color_div">
      <tr class="line_color">
        <td class="blink_text fade"><%= link_to "Log in", :controller=>"users",:action=>"login" %></td></td>
        <td class="rt blink_text ">Sign up</td>
      </tr>
    </div>
      <tr>
        <td>
          <%= f.label :Name %>
        </td>
        <td>
          <%= f.text_field :name,:required=>"true",:placeholder=>"Email" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :Email %>
        </td>
        <td>
          <%= f.text_field :email,:required=>"true",:placeholder=>"Email" %>
        </td>
      </tr>
      <tr>

      <tr>
        <td>
          <%= f.label :Password %>
        </td>
        <td>
          <%= f.password_field :password,:required=>"true",:placeholder=>"Password" %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.label :Confirm%>
        </td>
        <td>
          <%=f.password_field  :password_confirmation %>
        </td>
      </tr>

        <td></td>
        <td>
          <%=f.submit 'Sign up',:class=>"btn"%>
        </td>
      </tr>
    </table>
<%end%>


